<!DOCTYPE html>
<html>
    <head>
        <title>Search</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/uikit.css">
        <script type="text/javascript" src="/js/jquery-3.1.1.js"></script>
        <script type="text/javascript" src="/js/uikit.js"></script>
        <script type="text/javascript" src="/js/site.js"></script>
        <style>
            * {
                box-sizing: border-box;
            }
            .anime-item .anime-poster {
                height: 250px;
            }
            .title-search-wrapper {
                text-align: right;
            }
        </style>
    </head>
    <body id="body">
        <div class="uk-grid">
            <%= @header %>
            <section class="uk-width-1-1">
                <%= @title_search_partial %>
            </section>
            <section class="uk-grid uk-width-1-1">
            <aside>
                <%= @genre_search_form_partial %>
            </aside>
            <% if @search_results.length > 0 %>
                <div class="result-wrapper uk-grid uk-width-small-7-10">
                <% @search_results.each do |result| %>
                    <figure class="uk-width-large-1-4 uk-width-small-1-3 anime-item">
                        <a href=<%= "/show/#{result['id']}" %>>
                        <img src=<%= "#{result['cover_image']}" %> 
                             width="300" height="300" class="anime-poster">
                        <figcaption>
                            <h2 class="anime-title"><%= result['title'] %></h2>
                            <p class="anime-genres">
                                <%= result['genres'].map {|genre| genre['name']}.
                                    join(', ') %>
                            </p>
                        </figcaption>
                        </a>
                    </figure>
                <% end %>
                </div>
            <% else %>
                <h2>Sorry, 0 results were found</h2>
            <% end %>
            </section>
            <%= @footer %>
        </div>
    </body>
</html>